<UserControl x:Class="PhoneScoutAdmin.Views.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- ORDERS DATA GRID -->
        <!-- ===================== -->
        <DataGrid Grid.Row="0"
                  Grid.Column="0"
                  ItemsSource="{Binding Orders}"
                  SelectedItem="{Binding SelectedOrder}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  ColumnWidth="*"
                  Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="E-mail address" Binding="{Binding userEmail}" />
                <DataGridTextColumn Header="Phone name" Binding="{Binding phoneName}" />
                <DataGridTextColumn Header="Price" Binding="{Binding price}" />
                <DataGridTextColumn Header="Status" Binding="{Binding status}" />
                <DataGridTextColumn Header="Amount" Binding="{Binding amount}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- ===================== -->
        <!-- RIGHT PANEL -->
        <!-- ===================== -->
        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Top"
                    Margin="5">

            <!-- NON-EDITABLE BASIC INFO -->
            <GroupBox Padding="10"
                      Header="Basic informations (not editable)"
                      BorderBrush="#68F145"
                      BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="E-mail address:" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedOrder.userEmail}" FontSize="16" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Address:" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Text="{Binding SelectedOrder.address}" FontSize="16" TextWrapping="Wrap"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Phone number:" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedOrder.phoneNumber}" FontSize="16" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Phone name:" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedOrder.phoneName}" FontSize="16" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Color:" FontSize="16" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Text="{Binding SelectedOrder.phoneColorName}" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding SelectedOrder.phoneColorHex}" Foreground="{Binding SelectedOrder.phoneColorHex}" FontWeight="Bold"/>
                    </StackPanel>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Ram / Storage:" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding SelectedOrder.phoneRam}" FontSize="16" VerticalAlignment="Center"/>
                </Grid>
            </GroupBox>

            <!-- EDITABLE HIGHLIGHTED INFO -->
            <GroupBox Margin="10,20,10,5"
                      Padding="10"
                      Header="Highlighted informations (editable)"
                      BorderBrush="#2300B3"
                      BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                    <StackPanel Grid.Row="0"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                        <TextBlock Text="ℹ"
          FontSize="16"
Foreground="#2300B3"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                            <TextBlock.ToolTip>
                                <ToolTip>
                                    Displays the price of the selected order.
                                </ToolTip>
                            </TextBlock.ToolTip>

                        </TextBlock>
                        <TextBlock Text="Price:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBox Grid.Row="0" Grid.Column="1" Width="200" Margin="5"
                             Text="{Binding SelectedOrder.price, UpdateSourceTrigger=PropertyChanged}"/>




                    <StackPanel Grid.Row="1"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                        <TextBlock Text="ℹ"
          FontSize="16"
Foreground="#2300B3"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                            <TextBlock.ToolTip>
                                <ToolTip>
                                    Displays the amount of the selected order.
                                </ToolTip>
                            </TextBlock.ToolTip>

                        </TextBlock>
                        <TextBlock Text="Amount:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBox Grid.Row="1" Grid.Column="1" Width="200" Margin="5"
                             Text="{Binding SelectedOrder.amount, UpdateSourceTrigger=PropertyChanged}"/>




                    <StackPanel Grid.Row="2"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                        <TextBlock Text="ℹ"
          FontSize="16"
Foreground="#2300B3"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                            <TextBlock.ToolTip>
                                <ToolTip>
                                    Displays the status of the selected order.
                                </ToolTip>
                            </TextBlock.ToolTip>

                        </TextBlock>
                        <TextBlock Text="Status:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                    </StackPanel>
                    <ComboBox Grid.Row="2" Grid.Column="1"
                              Width="200" Margin="5"
                              ItemsSource="{Binding Statuses}"
                              DisplayMemberPath="statusName"
                              SelectedValuePath="statusCode"
                              SelectedValue="{Binding SelectedOrder.status, Mode=TwoWay}"/>

                    <Button Grid.Row="3" Grid.ColumnSpan="2"
                            Content="Save datas"
                            Margin="10,10,10,0"
                            Padding="5"
                            FontSize="18"
                            Background="WhiteSmoke"
                            BorderBrush="#68F145"
                            BorderThickness="3"
                            Command="{Binding SaveOrderCommand}"/>
                </Grid>
            </GroupBox>
        </StackPanel>

        <!-- ===================== -->
        <!-- DELETE ORDER BUTTON -->
        <!-- ===================== -->
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button Width="200"
                    Padding="5"
                    FontSize="18"
                    Background="WhiteSmoke"
                    BorderBrush="Red"
                    BorderThickness="3"
                    Content="Delete order"
                    Command="{Binding DeleteOrderCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
