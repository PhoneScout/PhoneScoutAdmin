<UserControl x:Class="PhoneScoutAdmin.Views.RepairView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- REPAIRS GRID -->
        <DataGrid Grid.Row="0"
                  Grid.Column="0"
                  ItemsSource="{Binding Repairs}"
                  SelectedItem="{Binding SelectedRepair}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="5">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding repairID}" />
                <DataGridTextColumn Header="Email" Binding="{Binding userEmail}" />
                <DataGridTextColumn Header="Manufacturer" Binding="{Binding manufacturerName}" />
                <DataGridTextColumn Header="Phone" Binding="{Binding phoneName}" />
                <DataGridTextColumn Header="Price" Binding="{Binding price}" />
                <DataGridTextColumn Header="Status" Binding="{Binding status}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- RIGHT PANEL -->
        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Center">

            <!-- NON-EDITABLE BASIC INFO -->
            <GroupBox Margin="5"
                      Padding="10"
                      Header="Basic informations (not editable)"
                      BorderBrush="#68F145"
                      BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Text="Manufacturer:" FontSize="16"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Text="{Binding SelectedRepair.manufacturerName}"
                               FontSize="16"/>

                    <TextBlock Grid.Row="1" Text="Phone name:" FontSize="16"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"
                               Text="{Binding SelectedRepair.phoneName}"
                               FontSize="16"/>

                    <TextBlock Grid.Row="2" Text="Address:" FontSize="16"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                               Text="{Binding SelectedRepair.address}"
                               FontSize="16"
                               TextWrapping="Wrap"/>

                    <TextBlock Grid.Row="3" Text="Phone number:" FontSize="16"/>
                    <TextBlock Grid.Row="3" Grid.Column="1"
                               Text="{Binding SelectedRepair.phoneNumber}"
                               FontSize="16"/>

                    <TextBlock Grid.Row="4" Text="Phone inspection:" FontSize="16"/>
                    <TextBlock Grid.Row="4" Grid.Column="1"
                               Text="{Binding SelectedRepair.phoneInspection}"
                               FontSize="16"/>
                </Grid>
            </GroupBox>

            <!-- EDITABLE -->
            <GroupBox Margin="5"
                      Padding="10"
                      Header="Highlighted informations (editable)"
                      BorderBrush="#2300B3"
                      BorderThickness="2">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- PRICE -->
                    <TextBlock Grid.Row="0" Text="Price:" FontSize="16"/>
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Width="180"
                             Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- STATUS (FIXED LIKE ORDER) -->
                    <TextBlock Grid.Row="1" Text="Status:" FontSize="16"/>
                    <ComboBox Grid.Row="1"
                              Grid.Column="1"
                              Width="180"
                              ItemsSource="{Binding Statuses}"
                              DisplayMemberPath="statusName"
                              SelectedValuePath="statusCode"
                              SelectedValue="{Binding SelectedRepair.status, Mode=TwoWay}"/>

                    <!-- ADD PART -->
                    <TextBlock Grid.Row="2" Text="Parts:" FontSize="16"/>
                    <StackPanel Grid.Row="2"
                                Grid.Column="1"
                                Orientation="Horizontal">

                        <TextBox Width="145"
                                 Text="{Binding NewPart, UpdateSourceTrigger=PropertyChanged}" />

                        <Button Content="Add"
                                Width="30"
                                Margin="5,0,0,0"
                                Command="{Binding AddPartCommand}" />
                    </StackPanel>

                    <!-- PARTS LIST -->
                    <ComboBox Grid.Row="3"
                              Grid.Column="1"
                              Width="180"
                              ItemsSource="{Binding Parts}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}" />
                                    <Button Content="✖"
                                            Width="20"
                                            Margin="5,0,0,0"
                                            Foreground="Red"
                                            Command="{Binding DataContext.RemovePartCommand,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- SAVE -->
                    <Button Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Content="Save"
                            Margin="10"
                            FontSize="18"
                            Command="{Binding SaveRepairCommand}" />
                </Grid>
            </GroupBox>
        </StackPanel>

        <!-- DELETE -->
        <Button Grid.Row="1"
                Grid.ColumnSpan="2"
                Width="200"
                Margin="10"
                FontSize="18"
                Content="Delete repair"
                Command="{Binding DeleteRepairCommand}" />
    </Grid>
</UserControl>
