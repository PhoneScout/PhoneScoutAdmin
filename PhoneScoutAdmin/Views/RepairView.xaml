<UserControl x:Class="PhoneScoutAdmin.Views.RepairView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- REPAIRS DATA GRID -->
        <!-- ===================== -->

        <DataGrid Grid.Row="0"
                  Grid.Column="0"
                  ItemsSource="{Binding Repairs}"
                  SelectedItem="{Binding SelectedRepair}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  ColumnWidth="*"
                  Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Repair ID" Binding="{Binding RepairID}" />
                <DataGridTextColumn Header="E-mail address" Binding="{Binding UserEmail}" />
                <DataGridTextColumn Header="Manufacturer" Binding="{Binding ManufacturerName}" />
                <DataGridTextColumn Header="Phone name" Binding="{Binding PhoneName}" />
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- ===================== -->
        <!-- RIGHT PANEL -->
        <!-- ===================== -->

        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Center">

            <!-- NON-EDITABLE BASIC INFO -->
            <GroupBox Margin="5"
                      Padding="10"
                      Header="Basic informations (not editable)"
                      BorderBrush="#68F145"
                      BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Manufacturer:" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedRepair.ManufacturerName}" FontSize="16" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Phone name:" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedRepair.PhoneName}" FontSize="16" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Address:" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedRepair.Address}" FontSize="16" VerticalAlignment="Center" TextWrapping="Wrap"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Phone number:" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedRepair.PhoneNumber}" FontSize="16" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Phone inspection:" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="4" Grid.Column="1"
                               
                               FontSize="16" VerticalAlignment="Center"/>

                    <Button Grid.Row="5" Grid.ColumnSpan="2"
                            Content="View problem description"
                            FontSize="12"
                            Margin="5"
                            Command="{Binding ViewProblemDescriptionCommand}"/>
                </Grid>
            </GroupBox>

            <!-- EDITABLE HIGHLIGHTED INFO -->
            <GroupBox Margin="5"
                      Padding="10"
                      Header="Highlighted informations (editable)"
                      BorderBrush="#2300B3"
                      BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Price:" FontSize="16" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                             Width="180"
                             Text="{Binding EditablePrice, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Status:" FontSize="16" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="1" Grid.Column="1"
                              Width="180"
                              ItemsSource="{Binding Statuses}"
                              SelectedItem="{Binding SelectedStatus}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Parts:" FontSize="16" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                        <TextBox Width="145" Text="{Binding NewPartName, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Content="Add" Width="30" Command="{Binding AddPartCommand}" Background="Green"/>
                    </StackPanel>

                    <ComboBox Grid.Row="3" Grid.Column="1" Width="180"
                              ItemsSource="{Binding SelectedRepair.Parts}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    <Button Content="✖" Foreground="Red" Width="20" Margin="5,0,0,0"
                                            Command="{Binding DataContext.RemovePartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Grid.Row="4" Grid.ColumnSpan="2"
                            Content="Save datas"
                            Margin="10,10,10,-20"
                            Padding="5"
                            FontSize="18"
                            Background="WhiteSmoke"
                            BorderBrush="#68F145"
                            BorderThickness="3"
                            Command="{Binding SaveRepairCommand}" />
                </Grid>
            </GroupBox>
        </StackPanel>

        <!-- ===================== -->
        <!-- DELETE BUTTON -->
        <!-- ===================== -->

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button Width="200"
                    Padding="5"
                    FontSize="18"
                    Background="WhiteSmoke"
                    BorderBrush="Red"
                    BorderThickness="3"
                    Content="Delete repair"
                    Command="{Binding DeleteRepairCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
