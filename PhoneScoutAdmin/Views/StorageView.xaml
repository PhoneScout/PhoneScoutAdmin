<UserControl x:Class="PhoneScoutAdmin.Views.StorageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- STORAGE LIST -->
        <!-- ===================== -->

        <DataGrid Grid.Row="0"
                  Grid.Column="0"
                  ItemsSource="{Binding parts}"
                  SelectedItem="{Binding SelectedPart}"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  Margin="5"/>

        <!-- ===================== -->
        <!-- RIGHT SIDE PANELS -->
        <!-- ===================== -->

        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Center">

            <!-- MODIFY PART -->
            <GroupBox Margin="5"
                      Padding="25"
                      Header="Modify the part"
                      BorderBrush="#2300B3"
                      BorderThickness="2">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Margin="5"
                               FontSize="16"
                               Text="Part name:" />

                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Width="180"
                             Margin="5"
                             Text="{Binding PartName, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Margin="5"
                               FontSize="16"
                               Text="Part amount:" />

                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Width="180"
                             Margin="5"
                             Text="{Binding PartAmount, UpdateSourceTrigger=PropertyChanged}" />

                    <Button Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Margin="10,15,10,0"
                            Padding="5"
                            FontSize="18"
                            Background="WhiteSmoke"
                            BorderBrush="#68F145"
                            BorderThickness="3"
                            Content="Save changes"
                            Command="{Binding SavePartCommand}" />
                </Grid>
            </GroupBox>

            <!-- UPLOAD PART -->
            <GroupBox Margin="5"
                      Padding="25"
                      Header="Upload a new part"
                      BorderBrush="#68F145"
                      BorderThickness="2">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Margin="5"
                               FontSize="16"
                               Text="Part name:" />

                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Width="180"
                             Margin="5"
                             Text="{Binding NewPartName, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Margin="5"
                               FontSize="16"
                               Text="Part amount:" />

                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Width="180"
                             Margin="5"
                             Text="{Binding NewPartAmount, UpdateSourceTrigger=PropertyChanged}" />

                    <Button Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Margin="10,15,10,0"
                            Padding="5"
                            FontSize="18"
                            Background="WhiteSmoke"
                            BorderBrush="#2300B3"
                            BorderThickness="3"
                            Content="Upload part"
                            Command="{Binding CreatePartCommand}" />
                </Grid>
            </GroupBox>
        </StackPanel>

        <!-- ===================== -->
        <!-- DELETE -->
        <!-- ===================== -->

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">

            <Button Width="200"
                    Padding="5"
                    FontSize="18"
                    Background="WhiteSmoke"
                    BorderBrush="Red"
                    BorderThickness="3"
                    Content="Delete part"
                    Command="{Binding DeleteStorageCommand}" />
        </StackPanel>

    </Grid>
</UserControl>
