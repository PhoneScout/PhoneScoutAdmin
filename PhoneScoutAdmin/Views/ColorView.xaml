<UserControl x:Class="PhoneScoutAdmin.Views.ColorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray">
    <StackPanel Margin="20">

        <TextBlock Text="Camera Details"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <TextBlock Text="Name"/>
        <TextBox Text="{Binding Name}" Margin="0,5,0,10"/>

        <TextBlock Text="Resolution"/>
        <TextBox Text="{Binding Resolution}" Margin="0,5,0,10"/>

        <TextBlock Text="Megapixels"/>
        <TextBox Text="{Binding Megapixels}" Margin="0,5,0,10"/>

    </StackPanel>
</UserControl>
