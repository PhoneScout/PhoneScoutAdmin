<UserControl x:Class="PhoneScoutAdmin.Views.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- USER LIST -->
        <!-- ===================== -->

        <DataGrid Grid.Row="0"
                  Grid.Column="0"
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser}"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  Margin="5"/>

        <!-- ===================== -->
        <!-- EDIT PANEL -->
        <!-- ===================== -->

        <GroupBox Grid.Row="0"
                  Grid.Column="1"
                  Margin="5"
                  Padding="25"
                  Header="Modify the user details"
                  BorderBrush="#2300B3"
                  BorderThickness="2"
                  VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Full name -->
                <StackPanel Grid.Row="0"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
          FontSize="16"
Foreground="#2300B3"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                Displays the full name of the selected user.
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="Full name:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                </StackPanel>


                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Width="180"
                         Margin="5"
                         Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Email -->
                <StackPanel Grid.Row="1"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
          FontSize="16"
Foreground="#2300B3"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                Displays the e-mail address of the selected user.
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="E-mail address:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                </StackPanel>

                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Width="180"
                         Margin="5"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Privilege -->
                <StackPanel Grid.Row="2"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
          FontSize="16"
Foreground="#2300B3"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                Displays the privilege of the selected user.
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="Privilege:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                </StackPanel>

                <ComboBox Grid.Row="2"
                          Grid.Column="1"
                          Width="180"
                          Margin="5"
                          ItemsSource="{Binding Items}"
                          SelectedItem="{Binding SelectedPrivilege}" />

                <!-- Active -->
                <StackPanel Grid.Row="3"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
          FontSize="16"
Foreground="#2300B3"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                Displays if the user is active or not.
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="Active:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                </StackPanel>

                <CheckBox Grid.Row="3"
                          Grid.Column="1"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="5"
                          IsChecked="{Binding IsActive}" />

                <!-- Save -->
                <Button Grid.Row="4"
        Grid.ColumnSpan="2"
        Margin="10,20,10,0"
        Padding="5"
        FontSize="18"
        Background="WhiteSmoke"
        BorderBrush="#68F145"
        BorderThickness="3"
        Content="Save changes"
        Command="{Binding SaveUserCommand}" />
                
                
            </Grid>
        </GroupBox>

        <!-- ===================== -->
        <!-- DELETE -->
        <!-- ===================== -->

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">

            <Button Width="200"
        Margin="10"
        Padding="5"
        FontSize="18"
        Background="WhiteSmoke"
        BorderBrush="Red"
        BorderThickness="3"
        Content="Delete user"
        Command="{Binding DeleteUserCommand}" />

        </StackPanel>

    </Grid>
</UserControl>
