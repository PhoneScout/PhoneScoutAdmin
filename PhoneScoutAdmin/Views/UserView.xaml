<UserControl x:Class="PhoneScoutAdmin.Views.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- USER LIST -->
        <!-- ===================== -->

        <DataGrid Grid.Row="0"
                  Grid.Column="0"
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser}"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  Margin="5"/>

        <!-- ===================== -->
        <!-- EDIT PANEL -->
        <!-- ===================== -->

        <GroupBox Grid.Row="0"
                  Grid.Column="1"
                  Margin="5"
                  Padding="25"
                  Header="Modify the user details"
                  BorderBrush="#2300B3"
                  BorderThickness="2"
                  VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Full name -->
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Margin="5"
                           FontSize="16"
                           Text="User full name:" />

                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Width="180"
                         Margin="5"
                         Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Email -->
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Margin="5"
                           FontSize="16"
                           Text="User email address:" />

                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Width="180"
                         Margin="5"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Privilege -->
                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Margin="5"
                           FontSize="16"
                           Text="User privilege:" />

                <ComboBox Grid.Row="2"
                          Grid.Column="1"
                          Width="180"
                          Margin="5"
                          ItemsSource="{Binding Items}"
                          SelectedItem="{Binding SelectedPrivilege}" />

                <!-- Active -->
                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Margin="5"
                           FontSize="16"
                           Text="User active:" />

                <CheckBox Grid.Row="3"
                          Grid.Column="1"
                          HorizontalAlignment="Left"
                          Margin="5"
                          IsChecked="{Binding IsActive}" />

                <!-- Save -->
                <Button Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Margin="10,15,10,0"
                        FontSize="18"
                        Content="Save changes"
                        Command="{Binding SaveUserCommand}" />
            </Grid>
        </GroupBox>

        <!-- ===================== -->
        <!-- DELETE -->
        <!-- ===================== -->

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">

            <Button Width="200"
                    FontSize="18"
                    Content="Delete user"
                    Command="{Binding DeleteUserCommand}" />
        </StackPanel>

    </Grid>
</UserControl>
