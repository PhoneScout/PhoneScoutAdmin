<UserControl x:Class="PhoneScoutAdmin.Views.RamStorageSectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhoneScoutAdmin.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- LEFT SIDE -->
        <StackPanel Grid.Column="0" Background="#EAEAEA">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <WrapPanel Grid.Row="0">
                    <GroupBox Grid.Row="0"
         Grid.Column="1"
         Margin="5"
         Padding="25"
         Header="Modify the ram speed and storage speed details"
         BorderBrush="#2300B3"
         BorderThickness="2"
         VerticalAlignment="Center">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Name -->
                            <StackPanel Grid.Row="0"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                                <TextBlock Text="ℹ"
          FontSize="14"
          Foreground="DodgerBlue"
          Cursor="Hand"
          VerticalAlignment="Center"
                          ToolTipService.InitialShowDelay="500">

                                    <TextBlock.ToolTip>
                                        <ToolTip>
                                            The manufacturer name of the CPU (e.g., Intel, AMD).
                                        </ToolTip>
                                    </TextBlock.ToolTip>

                                </TextBlock>
                                <TextBlock Text="Ram speed:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBox Grid.Row="0"
Grid.Column="1"
Width="180"
Margin="5"
Text="{Binding RamSpeed, UpdateSourceTrigger=PropertyChanged}" />

                            <!-- URL -->
                            <StackPanel Grid.Row="1"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                                <TextBlock Text="ℹ"
          FontSize="14"
          Foreground="DodgerBlue"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                                    <TextBlock.ToolTip>
                                        <ToolTip>
                                            The manufacturer name of the CPU (e.g., Intel, AMD).
                                        </ToolTip>
                                    </TextBlock.ToolTip>

                                </TextBlock>
                                <TextBlock Text="Storage speed:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBox Grid.Row="1"
                Grid.Column="1"
                Width="180"
                Margin="5"
                Text="{Binding StorageSpeed, UpdateSourceTrigger=PropertyChanged}" />

                        </Grid>
                    </GroupBox>
                </WrapPanel>
                <WrapPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
                    <Button Content="Add Ram / Storage"
        Command="{Binding AddRamStorageCommand}"
        Margin="10"/>

                    <ListBox ItemsSource="{Binding RamStorages}"
         SelectedItem="{Binding SelectedRamStorage}"
         DisplayMemberPath="Name"
         Margin="10"/>

                    <Button Content="Delete Ram / Storage"
        Command="{Binding RemoveRamStorageCommand}"
        Margin="10"/>
                </WrapPanel>

                

            </Grid>

        </StackPanel>

        <!-- RIGHT SIDE -->
        <ContentControl Grid.Column="1"
                        Content="{Binding SelectedRamStorage}"/>

    </Grid>
</UserControl>
