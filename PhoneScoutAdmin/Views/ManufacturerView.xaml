<UserControl x:Class="PhoneScoutAdmin.Views.ManufacturerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- MANUFACTURER LIST -->
        <!-- ===================== -->

        <DataGrid Grid.Row="0"
                  Grid.Column="0"
                  ItemsSource="{Binding Manufacturers}"
                  SelectedItem="{Binding SelectedManufacturer}"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  Margin="5" />

        <!-- ===================== -->
        <!-- EDIT PANEL -->
        <!-- ===================== -->

        <GroupBox Grid.Row="0"
                  Grid.Column="1"
                  Margin="5"
                  Padding="25"
                  Header="Modify the manufacturer details"
                  BorderBrush="#2300B3"
                  BorderThickness="2"
                  VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Name -->
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Margin="5"
                           FontSize="16"
                           Text="Name:" />

                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Width="180"
                         Margin="5"
                         Text="{Binding ManufacturerName, UpdateSourceTrigger=PropertyChanged}" />

                <!-- URL -->
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Margin="5"
                           FontSize="16"
                           Text="URL:" />

                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Width="180"
                         Margin="5"
                         Text="{Binding ManufacturerUrl, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Email -->
                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Margin="5"
                           FontSize="16"
                           Text="E-mail address:" />

                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Width="180"
                         Margin="5"
                         Text="{Binding ManufacturerEmail, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Save -->
                <Button Grid.Row="3"
                        Grid.ColumnSpan="2"
                        Margin="10,15,10,0"
                        Padding="5"
                        FontSize="18"
                        Background="WhiteSmoke"
                        BorderBrush="#68F145"
                        BorderThickness="3"
                        Content="Save changes"
                        Command="{Binding SaveManufacturerCommand}" />
            </Grid>
        </GroupBox>

        <!-- ===================== -->
        <!-- DELETE -->
        <!-- ===================== -->

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">

            <Button Width="200"
                    Padding="5"
                    FontSize="18"
                    Background="WhiteSmoke"
                    BorderBrush="Red"
                    BorderThickness="3"
                    Content="Delete manufacturer"
                    Command="{Binding DeleteManufacturerCommand}" />
        </StackPanel>

    </Grid>
</UserControl>
