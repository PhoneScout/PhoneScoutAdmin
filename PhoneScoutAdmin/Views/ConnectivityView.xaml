<UserControl x:Class="PhoneScoutAdmin.Views.ConnectivityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray">
    <Grid Margin="10">


        <!-- ===================== -->
        <!-- EDIT PANEL -->
        <!-- ===================== -->

        <GroupBox Grid.Row="0"
              Grid.Column="1"
              Margin="5"
              Padding="25"
              Header="Modify the connectivity details"
              BorderBrush="#2300B3"
              BorderThickness="2"
              VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Name -->
                <StackPanel Grid.Row="0"
            Grid.Column="0"
            Orientation="Horizontal"
            VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
               FontSize="14"
               Foreground="DodgerBlue"
               Cursor="Hand"
               VerticalAlignment="Center"
                               ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                The manufacturer name of the CPU (e.g., Intel, AMD).
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="Wifi:"
               Margin="5,5,2,5"
               FontSize="16"
               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBox Grid.Row="0"
     Grid.Column="1"
     Width="180"
     Margin="5"
     Text="{Binding Wifi, UpdateSourceTrigger=PropertyChanged}" />

                <!-- URL -->
                <StackPanel Grid.Row="1"
            Grid.Column="0"
            Orientation="Horizontal"
            VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
               FontSize="14"
               Foreground="DodgerBlue"
               Cursor="Hand"
               VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                The manufacturer name of the CPU (e.g., Intel, AMD).
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="Bluetooth:"
               Margin="5,5,2,5"
               FontSize="16"
               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Width="180"
                     Margin="5"
                     Text="{Binding Bluetooth, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Email -->
                <StackPanel Grid.Row="2"
            Grid.Column="0"
            Orientation="Horizontal"
            VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
               FontSize="14"
               Foreground="DodgerBlue"
               Cursor="Hand"
               VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                The manufacturer name of the CPU (e.g., Intel, AMD).
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="Mobile network:"
               Margin="5,5,2,5"
               FontSize="16"
               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Width="180"
                     Margin="5"
                     Text="{Binding MobileNetwork, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel Grid.Row="3"
            Grid.Column="0"
            Orientation="Horizontal"
            VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
               FontSize="14"
               Foreground="DodgerBlue"
               Cursor="Hand"
               VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                The manufacturer name of the CPU (e.g., Intel, AMD).
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="Dual SIM:"
               Margin="5,5,2,5"
               FontSize="16"
               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBox Grid.Row="3"
     Grid.Column="1"
     Width="180"
     Margin="5"
     Text="{Binding DualSim, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel Grid.Row="4"
            Grid.Column="0"
            Orientation="Horizontal"
            VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
               FontSize="14"
               Foreground="DodgerBlue"
               Cursor="Hand"
               VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                The manufacturer name of the CPU (e.g., Intel, AMD).
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="E-SIM:"
               Margin="5,5,2,5"
               FontSize="16"
               VerticalAlignment="Center"/>
                </StackPanel>

                <CheckBox Grid.Row="4"
Grid.Column="1"
Margin="5"
HorizontalAlignment="Left"
IsChecked="{Binding ESim}" />


                <StackPanel Grid.Row="5"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
          FontSize="14"
          Foreground="DodgerBlue"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                The manufacturer name of the CPU (e.g., Intel, AMD).
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="NFC:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                </StackPanel>

                <CheckBox Grid.Row="5"
Grid.Column="1"
Margin="5"
HorizontalAlignment="Left"
IsChecked="{Binding Nfc}" />

                <StackPanel Grid.Row="6"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
          FontSize="14"
          Foreground="DodgerBlue"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                The manufacturer name of the CPU (e.g., Intel, AMD).
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="Jack port:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                </StackPanel>

                <CheckBox Grid.Row="6"
Grid.Column="1"
Margin="5"
HorizontalAlignment="Left"
IsChecked="{Binding Jack}" />

                <StackPanel Grid.Row="7"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
          FontSize="14"
          Foreground="DodgerBlue"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                The manufacturer name of the CPU (e.g., Intel, AMD).
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="Connection speed:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                </StackPanel>

                <TextBox Grid.Row="7"
Grid.Column="1"
Width="180"
Margin="5"
Text="{Binding ConnectionSpeed, UpdateSourceTrigger=PropertyChanged}" />


                
            </Grid>
        </GroupBox>



    </Grid>
</UserControl>
