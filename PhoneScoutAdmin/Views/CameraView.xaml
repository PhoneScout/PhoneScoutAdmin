<UserControl x:Class="PhoneScoutAdmin.Views.CameraView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray">
    <GroupBox Grid.Row="0"
              Grid.Column="1"
              Margin="5"
              Padding="25"
              Header="Modify the camera details"
              BorderBrush="#2300B3"
              BorderThickness="2"
              VerticalAlignment="Center">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Name -->
            <StackPanel Grid.Row="0"
            Grid.Column="0"
            Orientation="Horizontal"
            VerticalAlignment="Center">



                <TextBlock Text="ℹ"
               FontSize="16"
Foreground="#2300B3"
               Cursor="Hand"
               VerticalAlignment="Center"
                               ToolTipService.InitialShowDelay="500">

                    <TextBlock.ToolTip>
                        <ToolTip>
                            Displays the name of the selected camera.
                        </ToolTip>
                    </TextBlock.ToolTip>

                </TextBlock>
                <TextBlock Text="Camera name:"
               Margin="5,5,2,5"
               FontSize="16"
               VerticalAlignment="Center"/>
            </StackPanel>

            <TextBox Grid.Row="0"
     Grid.Column="1"
     Width="180"
     Margin="5"
     Text="{Binding CameraName, UpdateSourceTrigger=PropertyChanged}" />

            <!-- URL -->
            <StackPanel Grid.Row="1"
            Grid.Column="0"
            Orientation="Horizontal"
            VerticalAlignment="Center">



                <TextBlock Text="ℹ"
               FontSize="16"
Foreground="#2300B3"
               Cursor="Hand"
               VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                    <TextBlock.ToolTip>
                        <ToolTip>
                            Displays the resolution of the selected camera.
                        </ToolTip>
                    </TextBlock.ToolTip>

                </TextBlock>
                <TextBlock Text="Camera resolution:"
               Margin="5,5,2,5"
               FontSize="16"
               VerticalAlignment="Center"/>
            </StackPanel>

            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Width="180"
                     Margin="5"
                     Text="{Binding CameraResolution, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Email -->
            <StackPanel Grid.Row="2"
            Grid.Column="0"
            Orientation="Horizontal"
            VerticalAlignment="Center">



                <TextBlock Text="ℹ"
               FontSize="16"
Foreground="#2300B3"
               Cursor="Hand"
               VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                    <TextBlock.ToolTip>
                        <ToolTip>
                            Displays the aperture of the selected camera. Example: f/1.9
                        </ToolTip>
                    </TextBlock.ToolTip>

                </TextBlock>
                <TextBlock Text="Camera aperture:"
               Margin="5,5,2,5"
               FontSize="16"
               VerticalAlignment="Center"/>
            </StackPanel>




                <TextBox Grid.Row="2" Grid.Column="1"                 
                     Width="180"
                     Margin="5"
                     Text="{Binding CameraAperture, UpdateSourceTrigger=PropertyChanged}" />
                <StackPanel Grid.Row="3"
            Grid.Column="0"
            Orientation="Horizontal"
            VerticalAlignment="Center">



                <TextBlock Text="ℹ"
               FontSize="16"
Foreground="#2300B3"
               Cursor="Hand"
               VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                    <TextBlock.ToolTip>
                        <ToolTip>
                            Displays the focal length of the selected camera.
                        </ToolTip>
                    </TextBlock.ToolTip>

                </TextBlock>
                <TextBlock Text="Camera focal lenght:"
               Margin="5,5,2,5"
               FontSize="16"
               VerticalAlignment="Center"/>
            </StackPanel>

            <TextBox Grid.Row="3"
     Grid.Column="1"
     Width="180"
     Margin="5"
     Text="{Binding CameraFocalLength, UpdateSourceTrigger=PropertyChanged}" />

            <StackPanel Grid.Row="4"
            Grid.Column="0"
            Orientation="Horizontal"
            VerticalAlignment="Center">



                <TextBlock Text="ℹ"
               FontSize="16"
Foreground="#2300B3"
               Cursor="Hand"
               VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                    <TextBlock.ToolTip>
                        <ToolTip>
                            Displays if the selected camera has an OIS (Optical Image Stabilizer) or not.
                        </ToolTip>
                    </TextBlock.ToolTip>

                </TextBlock>
                <TextBlock Text="Camera OIS:"
               Margin="5,5,2,5"
               FontSize="16"
               VerticalAlignment="Center"/>
            </StackPanel>

            <CheckBox Grid.Row="4" VerticalAlignment="Center"
Grid.Column="1"
Margin="5"
HorizontalAlignment="Center"
IsChecked="{Binding CameraOIS}" />

            <StackPanel Grid.Row="5"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                <TextBlock Text="ℹ"
          FontSize="16"
Foreground="#2300B3"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                    <TextBlock.ToolTip>
                        <ToolTip>
                            Displays the type of the selected camera. Example: selfie, main camera.
                        </ToolTip>
                    </TextBlock.ToolTip>

                </TextBlock>
                <TextBlock Text="Camera type:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
            </StackPanel>

            <TextBox Grid.Row="5"
Grid.Column="1"
Width="180"
Margin="5"
Text="{Binding CameraType, UpdateSourceTrigger=PropertyChanged}" />


        </Grid>
    </GroupBox>
</UserControl>
