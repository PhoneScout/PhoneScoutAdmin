<UserControl x:Class="PhoneScoutAdmin.Views.SingleManufacturerPhonesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- PHONE LIST -->
        <!-- ===================== -->

        <DataGrid Grid.Row="0"
                  Grid.Column="0"
                  Margin="5"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  ItemsSource="{Binding Phones}"
                  SelectedItem="{Binding SelectedPhone}" />

        <!-- ===================== -->
        <!-- EDIT PANEL -->
        <!-- ===================== -->

        <GroupBox Grid.Row="0"
                  Grid.Column="1"
                  Margin="5"
                  Padding="25"
                  Header="Modify the phone details"
                  BorderBrush="#2300B3"
                  BorderThickness="2"
                  VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- PHONE NAME -->
                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="5">
                    <TextBlock Text="ℹ"
                               FontSize="16"
Foreground="#2300B3"
                               ToolTip="Displays the selected phone's name."
                               VerticalAlignment="Center"/>
                    <TextBlock Text="  Phone name:"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Width="180"
                         Margin="5"
                         Text="{Binding PhoneName,
                                        UpdateSourceTrigger=PropertyChanged}" />

                <!-- PRICE -->
                <StackPanel Grid.Row="1"
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="5">
                    <TextBlock Text="ℹ"
                               FontSize="16"
                               Foreground="#2300B3"
                               ToolTip="Displays the selecte phone price."
                               VerticalAlignment="Center"/>
                    <TextBlock Text="  Phone price:"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Width="180"
                         Margin="5"
                         Text="{Binding PhonePrice,
                                        UpdateSourceTrigger=PropertyChanged}" />

                <!-- IN STORAGE -->
                <StackPanel Grid.Row="2"
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="5">
                    <TextBlock Text="ℹ"
                               FontSize="16"
                               Foreground="#2300B3"
                               ToolTip="Indicates if the phone is in storage."
                               VerticalAlignment="Center"/>
                    <TextBlock Text="  In storage:"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <CheckBox Grid.Row="2"
                          Grid.Column="1"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          IsChecked="{Binding IsInStorage}">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                    </CheckBox.LayoutTransform>
                </CheckBox>

                <!-- AVAILABLE -->
                <StackPanel Grid.Row="3"
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="5">
                    <TextBlock Text="ℹ"
                               FontSize="16"
                               Foreground="#2300B3"
                               ToolTip="Indicates if the phone is available for sale."
                               VerticalAlignment="Center"/>
                    <TextBlock Text="  Available:"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <CheckBox Grid.Row="3"
                          Grid.Column="1"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          IsChecked="{Binding IsAvailable}">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                    </CheckBox.LayoutTransform>
                </CheckBox>

                <!-- SAVE -->
                <Button Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Margin="10,20,10,0"
                        Padding="5"
                        FontSize="18"
                        Background="WhiteSmoke"
                        BorderBrush="#68F145"
                        BorderThickness="3"
                        Content="Save changes"
                        Command="{Binding SavePhoneCommand}" />
            </Grid>
        </GroupBox>

        <!-- ===================== -->
        <!-- ACTION BUTTONS -->
        <!-- ===================== -->

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">

            <Button Width="200"
                    Margin="10"
                    Padding="5"
                    FontSize="18"
                    Background="WhiteSmoke"
                    BorderBrush="#2300B3"
                    BorderThickness="3"
                    Content="Modify phone"
                    Command="{Binding EditPhoneCommand}" />

            <Button Width="200"
                    Margin="10"
                    Padding="5"
                    FontSize="18"
                    Background="WhiteSmoke"
                    BorderBrush="Red"
                    BorderThickness="3"
                    Content="Delete phone"
                    Command="{Binding DeletePhoneCommand}" />
        </StackPanel>

        <Button Grid.Row="1"
                Grid.Column="1"
                Width="200"
                Margin="10"
                Padding="5"
                FontSize="18"
                Background="WhiteSmoke"
                BorderBrush="#68F145"
                BorderThickness="3"
                Content="Create phone"
                Command="{Binding CreatePhoneCommand}" />
    </Grid>
</UserControl>
