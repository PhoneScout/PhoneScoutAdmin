<UserControl x:Class="PhoneScoutAdmin.Views.PhoneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- PHONE LIST -->
        <!-- ===================== -->

        <DataGrid Grid.Row="0"
                  Grid.Column="0"
                  ItemsSource="{Binding Phones}"
                  SelectedItem="{Binding SelectedPhone}"
                  AutoGenerateColumns="True"
                  Margin="5"
                  CanUserAddRows="False" />

        <!-- ===================== -->
        <!-- EDIT PANEL -->
        <!-- ===================== -->

        <GroupBox Grid.Row="0"
                  Grid.Column="1"
                  Margin="5"
                  Padding="20"
                  Header="Modify the phone details"
                  BorderBrush="#2300B3"
                  BorderThickness="2">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Phone Name -->
                <StackPanel Grid.Row="0"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
          FontSize="16"
Foreground="#2300B3"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                Displays the name of the selected phone.
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="Phone name:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                </StackPanel>

                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Margin="5"
                         Width="180"
                         Text="{Binding PhoneName, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Phone Price -->
                <StackPanel Grid.Row="1"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
          FontSize="16"
Foreground="#2300B3"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                Displays the price of the selected phone.
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="Phone price:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                </StackPanel>

                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Margin="5"
                         Width="180"
                         Text="{Binding PhonePrice}" />

                <!-- In Store -->
                <StackPanel Grid.Row="2"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                    <TextBlock Text="ℹ"
          FontSize="16"
Foreground="#2300B3"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                        <TextBlock.ToolTip>
                            <ToolTip>
                                Displays if the phone is available in store or not.
                            </ToolTip>
                        </TextBlock.ToolTip>

                    </TextBlock>
                    <TextBlock Text="Phone in store:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                </StackPanel>

                <CheckBox Grid.Row="2"
                          Grid.Column="1"
                          Margin="5"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          IsChecked="{Binding PhoneInStore}" />

                <!-- Available -->
                                    <StackPanel Grid.Row="3"
       Grid.Column="0"
       Orientation="Horizontal"
       VerticalAlignment="Center">



                        <TextBlock Text="ℹ"
          FontSize="16"
Foreground="#2300B3"
          Cursor="Hand"
          VerticalAlignment="Center" ToolTipService.InitialShowDelay="500">

                            <TextBlock.ToolTip>
                                <ToolTip>
                                Displays if the phone is visible on the website or not.
                            </ToolTip>
                            </TextBlock.ToolTip>

                        </TextBlock>
                        <TextBlock Text="Phone available:"
          Margin="5,5,2,5"
          FontSize="16"
          VerticalAlignment="Center"/>
                    </StackPanel>

                <CheckBox Grid.Row="3"
                          Grid.Column="1"
                          Margin="5"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          IsChecked="{Binding PhoneAvailable}" />

                <!-- Save -->
                <Button Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Margin="10"
                        Padding="6"
                        FontSize="16"
                        Content="Save changes"
                        BorderBrush="#68F145"
                        BorderThickness="3"
                        Background="WhiteSmoke"
                        Command="{Binding SavePhoneCommand}" />
            </Grid>
        </GroupBox>

        <!-- ===================== -->
        <!-- BOTTOM ACTIONS -->
        <!-- ===================== -->

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">

            <Button Width="200"
                    Margin="10,0"
                    FontSize="16"
                    Content="Delete phone"
                    BorderBrush="Red"
                    BorderThickness="3"
                    Background="WhiteSmoke"
                    Command="{Binding DeletePhoneCommand}" />

            <Button Width="200"
        Margin="10,0"
        FontSize="16"
        Content="Create a new phone"
        BorderBrush="#2300B3"
        BorderThickness="3"
        Background="WhiteSmoke"
        Command="{Binding CreatePhoneCommand}" />

            <Button Width="200"
Margin="10,0"
FontSize="16"
Content="Update this phone"
BorderBrush="#2300B3"
BorderThickness="3"
Background="WhiteSmoke"
Command="{Binding UpdatePhoneCommand}" />
        </StackPanel>

    </Grid>
</UserControl>
