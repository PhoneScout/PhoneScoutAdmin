<UserControl x:Class="PhoneScoutAdmin.Views.PhoneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGray">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- ===================== -->
        <!-- PHONE LIST -->
        <!-- ===================== -->

        <DataGrid Grid.Row="0"
                  Grid.Column="0"
                  ItemsSource="{Binding Phones}"
                  SelectedItem="{Binding SelectedPhone}"
                  AutoGenerateColumns="True"
                  Margin="5"
                  CanUserAddRows="False" />

        <!-- ===================== -->
        <!-- EDIT PANEL -->
        <!-- ===================== -->

        <GroupBox Grid.Row="0"
                  Grid.Column="1"
                  Margin="5"
                  Padding="20"
                  Header="Modify the phone details"
                  BorderBrush="#2300B3"
                  BorderThickness="2">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Phone Name -->
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Margin="5"
                           Text="Phone name:"
                           FontSize="16"/>

                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Margin="5"
                         Width="180"
                         Text="{Binding PhoneName, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Phone Price -->
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Margin="5"
                           Text="Phone price:"
                           FontSize="16"/>

                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Margin="5"
                         Width="180"
                         Text="{Binding PhonePrice}" />

                <!-- In Store -->
                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Margin="5"
                           Text="Phone in store:"
                           FontSize="16"/>

                <CheckBox Grid.Row="2"
                          Grid.Column="1"
                          Margin="5"
                          HorizontalAlignment="Left"
                          IsChecked="{Binding PhoneInStore}" />

                <!-- Available -->
                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Margin="5"
                           Text="Phone available:"
                           FontSize="16"/>

                <CheckBox Grid.Row="3"
                          Grid.Column="1"
                          Margin="5"
                          HorizontalAlignment="Left"
                          IsChecked="{Binding PhoneAvailable}" />

                <!-- Save -->
                <Button Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Margin="10"
                        Padding="6"
                        FontSize="16"
                        Content="Save changes"
                        BorderBrush="#68F145"
                        BorderThickness="3"
                        Background="WhiteSmoke"
                        Command="{Binding SavePhoneCommand}" />
            </Grid>
        </GroupBox>

        <!-- ===================== -->
        <!-- BOTTOM ACTIONS -->
        <!-- ===================== -->

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">

            <Button Width="200"
                    Margin="10,0"
                    FontSize="16"
                    Content="Delete phone"
                    BorderBrush="Red"
                    BorderThickness="3"
                    Background="WhiteSmoke"
                    Command="{Binding DeletePhoneCommand}" />
        </StackPanel>

    </Grid>
</UserControl>
