<Window x:Class="PhoneScoutAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneScoutAdmin"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="270"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        
        <Image Source="/Images/PhoneScoutLogo.png" Margin="10" Grid.Row="0"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>

            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Felhasználónév:" VerticalAlignment="Center" HorizontalAlignment="center"/>
            <TextBox Grid.Row="1" Width="200" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center"/>            
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>

            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Jelszó:" VerticalAlignment="Center" HorizontalAlignment="center"/>
            <TextBox Grid.Row="1" Width="200" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="3">
            <Button Content="Bejelentkezés" Height="25" Width="150" />
        </Grid>

    </Grid>
</Window>
