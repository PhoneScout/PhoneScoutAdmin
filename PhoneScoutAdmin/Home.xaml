<Window x:Class="PhoneScoutAdmin.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneScoutAdmin"
        mc:Ignorable="d"
        Title="Home" Height="750" Width="1300"
        Background="White">

    <DockPanel>

        <!-- MENU -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File"/>
            <MenuItem Header="Edit"/>
        </Menu>

        <!-- MAIN CONTENT GRID -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Side menu -->
                <ColumnDefinition Width="8*"/>
                <!-- Content -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <!-- Header -->
                <RowDefinition Height="8*"/>
                <!-- Main content -->
                <RowDefinition Height="1*"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- LOGO -->
            <WrapPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
                <Image Source="/Images/ImagePhoneScoutLogo.png" Height="50" Margin="5"/>
                <Label FontSize="24" FontWeight="Bold" Content="Phone" VerticalAlignment="Center" Foreground="#2300B3"/>
                <Label FontSize="24" FontWeight="Bold" Content="Scout" VerticalAlignment="Center" Foreground="#68F145" Margin="-5,0,0,0"/>
            </WrapPanel>

            <!-- HEADER -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,5">
                <TextBlock Text="Admin Interface /" FontSize="28" FontWeight="Bold"/>
                <TextBlock Text=" Home" FontSize="28" FontWeight="Bold" Foreground="#68F145"/>
            </StackPanel>

            <!-- FOOTER -->
            <WrapPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" Margin="5">
                <Label Content="©2026 PhoneScout."/>
                <Label Content="All rights reserved."/>
            </WrapPanel>

            <!-- SIDE MENU -->
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Background="#80A4CB">
                <Button Content="Manage phones" Margin="15,30,15,10" FontSize="16" Width="180" Padding="5" Background="#80A4CB" Foreground="White" BorderBrush="White" BorderThickness="3" Command="{Binding ShowPhonesCommand}"/>
                <Button Content="Manage manufacturers" Margin="15,25,15,10" FontSize="16" Width="180" Padding="5" Background="#80A4CB" Foreground="White" BorderBrush="White" BorderThickness="3" Command="{Binding ShowManufacturersCommand}"/>
                <Button Content="Manage users" Margin="15,25,15,10" FontSize="16" Width="180" Padding="5" Background="#80A4CB" Foreground="White" BorderBrush="White" BorderThickness="3" Command="{Binding ShowUsersCommand}"/>
                <Button Content="Manage storage" Margin="15,25,15,10" FontSize="16" Width="180" Padding="5" Background="#80A4CB" Foreground="White" BorderBrush="White" BorderThickness="3" Command="{Binding ShowStorageCommand}"/>
                <Button Content="Manage repairs" Margin="15,25,15,10" FontSize="16" Width="180" Padding="5" Background="#80A4CB" Foreground="White" BorderBrush="White" BorderThickness="3" Command="{Binding ShowRepairsCommand}"/>
                <Button Content="Manage orders" Margin="15,25,15,10" FontSize="16" Width="180" Padding="5" Background="#80A4CB" Foreground="White" BorderBrush="White" BorderThickness="3" Command="{Binding ShowOrdersCommand}"/>
            </StackPanel>

            <!-- MAIN CONTENT AREA -->
            <ContentControl Grid.Row="1" Grid.Column="1"
                            x:Name="MainContent"
                            Content="{Binding CurrentViewModel}" />
        </Grid>
    </DockPanel>
</Window>
