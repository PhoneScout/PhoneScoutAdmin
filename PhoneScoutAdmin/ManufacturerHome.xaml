<Window x:Class="PhoneScoutAdmin.ManufacturerHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneScoutAdmin"
        mc:Ignorable="d"
        Title="ManufacturerHome">
    

    <DockPanel>

        <!-- MENU stays -->

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDE MENU -->
            <StackPanel Grid.Column="0"
                        Background="#80A4CB">

                <Button Content="Manage my phones"
                        Command="{Binding ShowPhonesCommand}" />

                <Button Content="Manage my datas"
                        Command="{Binding ShowManufacturerCommand}" />
            </StackPanel>

            <!-- MAIN CONTENT -->
            <ContentControl Grid.Column="1"
                            Content="{Binding CurrentView}" />
        </Grid>
    </DockPanel>
</Window>
